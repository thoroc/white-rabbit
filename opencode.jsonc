    "lsp": {
        "markdown-oxide": {
            "command": ["markdown-oxide"],
            "extensions": [".md", ".markdown"],
        },
        "yaml": {
            "command": ["yaml-language-server"],
            "extensions": [".yaml", ".yml"],
        },
        "tree-sitter": {
            "command": ["tree-sitter"],
            "extensions": [".scm"],
        },
    },
}
