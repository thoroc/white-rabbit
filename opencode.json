{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/grok-code",
  "plugin": ["@tarquinen/opencode-smart-title", "@tarquinen/opencode-dcp"],
  "experimental": {
    "primary_tools": ["prune"]
  },
  "instructions": [
    ".opencode/knowledge-base/plugins.md",
    ".opencode/knowledge-base/commands.md",
    ".opencode/knowledge-base/tools.md",
    ".opencode/knowledge-base/agents.md"
  ],
  "tools": {
    "commit": true
  },
  "provider": {
    "openrouter": {
      "models": {
        "gpt-neo-2.7b": {
          "name": "GPT-Neo 2.7B (OpenRouter)",
          "limit": { "context": 2048, "output": 2048 }
        },
        "mistral-7b-instruct": {
          "name": "Mistral 7B Instruct (OpenRouter)",
          "limit": { "context": 8192, "output": 4096 }
        }
      }
    },
    "huggingface": {
      "models": {
        "google/flan-t5-small": {
          "name": "Flan-T5 small (Hugging Face)",
          "limit": { "context": 1024, "output": 512 }
        },
        "bigcode/starcoder": {
          "name": "StarCoder (Hugging Face)",
          "limit": { "context": 16384, "output": 8192 }
        }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": { "baseURL": "http://localhost:11434/v1" },
      "models": {
        "llama2": {
          "name": "Llama 2 (Ollama local)",
          "limit": { "context": 8192, "output": 4096 }
        }
      }
    },
    "llama.cpp": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "llama-server (local)",
      "options": { "baseURL": "http://127.0.0.1:8080/v1" },
      "models": {
        "qwen3-coder:a3b": {
          "name": "Qwen3-Coder (local)",
          "limit": { "context": 128000, "output": 65536 }
        }
      }
    },
    "opencode": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "OpenCode Zen",
      "options": {
        "baseURL": "https://opencode.ai/zen/v1/responses",
        "apiKey": "{env:OPENCODE_ZEN_API_KEY}"
      },
      "models": {
        "grok-code": {
          "id": "grok-code",
          "name": "Grok Code Fast 1 (OpenCode Zen) - free",
          "limit": { "context": 16384, "output": 8192 }
        },
        "big-pickle": {
          "id": "big-pickle",
          "name": "Big Pickle (OpenCode Zen) - free",
          "limit": { "context": 16384, "output": 8192 }
        }
      }
    }
  }
}
