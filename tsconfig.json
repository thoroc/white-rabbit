{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "types": ["node"],
        "baseUrl": "."
    },
    "include": ["src", ".opencode/**/*", "types", "**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
